<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/header.css">
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">سامبلز</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/"> الرئيسية</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <% if(!currentUser) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/signIn">تسجيل الدخول</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">حساب جديد</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <%= currentUser.username %>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/profile/<%= currentUser.id %>">الحساب</a>
                                <a class="dropdown-item" href="/logout">خروج</a>
                            </div>
                        </li>
                        <% if(currentUser.memberShip=="free" || currentUser.memberShip=="Pro" ||
                            currentUser.memberShip=="ProPlus" ) { %>
                            <li class="nav-item">
                                <a href="/pay/<%= currentUser.id %>" class="nav-link  btn btn-outline-success"
                                    id="upgradeButton">ترقية العضوية </a>
                                <% } %>
                            </li>
                            <% } %>
            </ul>
        </div>
</nav>


<div class="container">
    <% if(error && error.length> 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
            <% if(success && success.length> 0) { %>
                <div class="alert alert-success text-center">
                    <%= success %>
                </div>
                <% } %>
</div>