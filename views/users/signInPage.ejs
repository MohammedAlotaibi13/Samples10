    <div class="container">
        <% if(error && error.length> 0) { %>
            <div class="alert alert-danger " role="alert">
                <%= error %>
            </div>
            <% } %>
                <% if(success && success.length> 0) { %>
                    <div class="alert alert-success text-center">
                        <%= success %>
                    </div>
                    <% } %>
    </div>
     <div class="grid-container">
        <div class="item-1">
            <h1 class="h3 mb-3 font-weight-normal">الرجاء تسجيل الدخول</h1>
        </div>
        <div class="item-3">
            <div class="form-group">
                <a href="/auth/google" id="google-button"><img src="../image/googleButtunPurple.png" height="50"
                        width="240"></a>

            </div>
        </div>
        <div class="item-3">
            <div class="form-group">
                أو

            </div>
        </div>
        <form method="post" action="/signIn" class="validated-form" novalidate>
            <div class="form-group mb-3">
                <div class="item-2">
                    <input type="email" class="form-control" placeholder="Email" name="email" required>
                    <input type="password" class="form-control" placeholder="Password" name="password" required>
                </div>
            </div>
            <div class="form-group">
                <div class="item-3">
                    <div class="form-check mb-3">

                        <a href="/forgot">نسيت كلمة المرور</a>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="item-4">
                    <button type="submit" class="btn btn-lg btn-primary" id="sign-button">تسجيل الدخول</button>
                </div>
            </div>
            <div class="form-group">
                <div class="item-5">
                    <a href="/register">تسجيل</a>
                </div>
            </div>
            <div class="form-group">
                <div class="item-6">
                    <p>Copyright © 2022 Samples, Inc.</p>
                </div>
            </div>

        </form>
