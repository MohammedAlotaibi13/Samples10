<!doctype html>
<html lang="en">

  <head>
    <title>Fotget Password</title>
    <meta name="descripiton" content="إستعادة كلمة المرور">
     <% include ../partails/head.ejs %>
    <link rel="stylesheet" type="text/css" href="../stylesheets/signInpage.css">
  </head>
<body class="text-center">

	<div class="container">
	  <% if(error && error.length > 0) { %>
	
       <div class="alert alert-danger" role="alert">
       <%= error %>
      
       </div>
       <% } %>
       <% if(success && success.length > 0) { %>
  <div class="alert alert-success text-center">
    <%= success %>
  </div>
  <% } %>
	</div>
          <div class="grid-container">
         	<div class="item-1">
         	    <h1 class="h3 mb-3 font-weight-normal">نسيت كلمة المرور</h1>
         	</div>
         	<form method="post" action="/forgot">
         		<div class="form-group">
	         	   <div class="item-2">
	         	   	 <input type="email" class="form-control" placeholder="Email" name="email">
	         	   </div>
	         	</div>
	         	<div class="form-group">
	         		<div class="item-4">
	         			<button type="submit" class="btn btn-lg btn-primary" id="sign-button">إرسال</button>
	         		</div>
	         	</div>
	         	<div class="form-group">
	         		<div class="item-6">
	         			<p>Copyright © 2018 Samples, Inc.</p>
	         		</div>
	         	</div>
	         	
	        </form>
         </div>


   <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
