        <title>نوع الباقة</title>
        <link rel="icon" href="/image/circleLogo.png">

</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KZHK7WQ" height="0" width="0"
            style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <% include ../partails/subHeader.ejs %>

        <div class="grid-container">
            <div class="item-1">
                <h3 class="h3 mb-3 font-weight-normal text-center" id="title">الدفع</h3>
            </div>

            <form method="post" onsubmit=" return isChecked()"" action=" /pay/<%=currentUser.id %>">
                <div class="form-group">
                    <div class="item-2 mb-3">
                        <div id="memberShip"></div>
                        <select class="form-select mb-2" name="memberShipPicker" id="memberShipPicker" required>
                            <option value="Gold">
                                Gold (99 SR)
                            </option>
                            <option value="Pro">Pro (165 SR)</option>
                        </select>
                        <select class="form-select mb-2 " name="paymntMethod" id="paymntMethod" required>
                            <option value="DebitCard">بطاقة مدى البنكية</option>
                            <option value="BankTransfer">تحويل بنكي</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-right" id="checkbox">
                        <!-- <p style="color: red;">عرض خاص خصم %50 على الباقة الذهبية، ينتهي العرض في 31 ديسمبر</p> -->
                        <input type="checkbox" name="terms" value="terms" id="terms"> أوافق على <a href="#"
                            onclick="window.open('/termsAndCondition' , 'myWindow' , 'height=400 width=400 top=100 , left=50' )">الشروط
                            والأحكام</a><br>
                    </div>
                    <div class="item-3">
                        <input type="submit" class="btn btn-success form-control" value="دفع" id="payButton">
                    </div>
                </div>
            </form>
        </div>

        <script type="text/javascript" src="/javascripts/payPage.js"></script>


        <% include ../partails/footer.ejs %>
</body>