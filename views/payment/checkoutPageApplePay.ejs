<!DOCTYPE html>
<html lang="en">

<head>

    <% include ../partails/head.ejs %>
        <link rel="stylesheet" type="text/css" href="/stylesheets/checkoutPage.css">
        <title>بيانات الدفع</title>
        <link rel="icon" href="/image/circleLogo.svg">

</head>

<body>

    <% include ../partails/headerMyBag.ejs %>

        <h3 class="h3 mb-3 font-weight-normal text-center" id="title">تفاصيل الباقة</h3>
        <div class="container">
            <form>
                <div class="form-group row">
                    <div class="col">
                        <label for="inputEmail3" class="col">
                            <%= currentUser.email %>
                        </label>
                    </div>
                    <label for="inputEmail3" class="col"> : الإيميل </label>
                </div>
                <% if(foundPayment.memberShip=="Pro" ) { %>
                    <div class="form-group row">
                        <div class="col">

                            <label for="inputEmail3" class="col" id="price">
                                <%= foundPayment.price %>
                            </label>
                        </div>
                        <label for="inputPassword3" class="col"> :المبلغ الإجمالي بالريال<label>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label for="inputEmail3" class="col"> 30
                            </label>
                        </div>
                        <label class="col"> : صلاحية الحساب بالأيام</label>
                    </div>

                    <div class="form-group row">
                        <div class="col">

                            <label for="inputEmail3" class="col">خمس اختبارات تجريبية</label>

                        </div>
                        <label class="col">: الباقة تشمل</label>
                    </div>

                    <% } else { %>

                        <div class="form-group row">
                            <div class="col">
                                <label for="inputEmail3" class="col" id="price">
                                    <%= foundPayment.price %>
                                </label>
                            </div>
                            <label for="inputPassword3" class="col"> :المبلغ الإجمالي بالريال<label>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <label for="inputEmail3" class="col"> 65 </label>
                            </div>
                            <label class="col"> : صلاحية الحساب بالأيام</label>
                        </div>
                        <div class="form-group row">
                            <div class="col">

                                <label for="inputEmail3" class="col"> الدورة التدريبية + خمس
                                    اختبارات تجريبية </label>

                            </div>
                            <label class="col">: الباقة تشمل</label>
                        </div>
            </form>
            <% } %>

                <div class="form-group row">
                    <div class="col d-flex justify-content-center">
                        <div class="mysr-form"></div>

                    </div>

                </div>
                <script>
                    var price = document.getElementById('price').innerHTML;
                    var finalPrice = parseInt(price);
                    Moyasar.init({
                        element: '.mysr-form',
                        amount: finalPrice * 100,
                        currency: 'SAR',
                        fixed_width: false,
                        language: 'ar',
                        description: '<%= foundPayment.memberShip %>',
                        publishable_api_key: 'pk_live_aLoC1NrCeTkeVMbogq9WE4W9cHD7esp7p5Lpvemm',
                        callback_url: 'https://www.samples10.com/succeses/<%=currentUser.id %>/<%= foundPayment.memberShip %>',
                        methods: ['applepay'],
                        apple_pay: {
                            country: 'SA',
                            label: 'Samples',
                            validate_merchant_url: 'https://api.moyasar.com/v1/applepay/initiate',
                        },
                    });

                </script>










                <% include ../partails/footer.ejs %>

</body>