<!DOCTYPE html>
<html>

<head>
	<title>Admin Page</title>
	<meta name="descripiton" content="قريباًً">
	<% include ../partails/head.ejs %>
		<link rel="icon" href="/image/circleLogo.png">
</head>

<body>
	<% include ../partails/subHeader.ejs %>
		<div class="container mt-5">
			<form method="POST" action="/admin/<%- currentUser.id %>/dashboard?_method=PUT" novalidate
				class="validated-form">
				<div class="form-group row">
					<div class="col-sm-10 col-xs-12">
						<input type="email" class="form-control" name="email" value="<%= user.email %>">
					</div>
					<label for="inputEmail3" class="col-sm-2 col-form-label"> : الإيميل </label>
				</div>
				<div class="form-group row">
					<div class="col-sm-10 col-xs-12">
						<input class="form-control" value="<%= user.numberOfAttempts %>">
					</div>
					<label for="inputEmail3" class="col-sm-2 col-form-label"> : الإيميل </label>
				</div>
				<div class="form-group row">
					<div class="col-sm-10 col-xs-12">
						<select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="memberShip">
							<option value="" selected>
								<%= user.memberShip %>
							</option>
							<option value="Pro">Pro</option>
							<option value="gold">gold</option>
						</select>
					</div>
					<label for="inputEmail3" class="col-sm-2 col-form-label"> : العضوية</label>
				</div>
				<div class="form-group row">
					<div class="col-sm-10 col-xs-12">
						<select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="accountExpiration">
							<option selected>
								<%= user.accountExpiration%>
							</option>
							<option value="ThreeDays">Three Days</option>
							<option value="oneWeek">one Week</option>
							<option value="oneMonth">one Month</option>
							<option value="Pro">Pro</option>
							<option value="gold">gold</option>
						</select>
					</div>
					<label for="inputEmail3" class="col-sm-2 col-form-label"> : إنتهاء صلاحية الاشتراك </label>
				</div>
				<div class="form-group row">
					<div class="col-sm-10 col-xs-12">
						<button type="submit" class="btn btn-success">Update</button>
					</div>
			</form>
		</div>


		<% include ../partails/footer.ejs %>
</body>

</html>